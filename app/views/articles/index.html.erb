<div class="row">
  <h1 class="center-align">HelpJuice Articles Search</h1>
  <form action="/articles/search" method="post" id="search">
    <div class="input-field">
      <div class="col s12 m6 offset-m3">
        <div class="card-panel center-align">
          <input id="token" name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <input placeholder="Search here" name="search_field" id="search_field" type="text" class="validate col l9 m12" required>
          <button type="submit" class="waves-effect waves-light btn light-blue lighten-2">go!</button>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="row center-align">
  <a href="/knowledgebase/clear" class="waves-effect waves-light btn red lighten-2">Clear all data</a>
</div>

<div class="row">

  <table class="col l6 offset-l3">
    <thead>
      <tr>
        <th>Query</th>
        <th>Times that appeared</th>
        <th>#</th>
      </tr>
    </thead>

    <tbody>
      <% @knowledge_base.each do |k| %>
      <tr>
        <td><%= k.first[0] %></td>
        <td><%= k.first[1] %></td>
        <td><a class="waves-effect waves-light btn red lighten-2" href="/knowledgebase/<%= k.first[0] %>/clear">Delete</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
